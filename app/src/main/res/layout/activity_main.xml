<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvMainField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_light"
            android:text="@string/oneSymbol"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:typeface="monospace" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibUp"
            style="@style/MyImageButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/descButtonUp"
            android:src="@drawable/circled_up" />

        <ImageView
            android:id="@+id/ivCenter"
            style="@style/MyImageButton"
            android:layout_below="@id/ibUp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/descCentralImage"
            android:src="@drawable/all_directions" />

        <ImageButton
            android:id="@+id/ibDown"
            style="@style/MyImageButton"
            android:layout_below="@id/ivCenter"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/descButtonDown"
            android:src="@drawable/circled_down" />

        <ImageButton
            android:id="@+id/ibLeft"
            style="@style/MyImageButton"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ivCenter"
            android:layout_toStartOf="@id/ivCenter"
            android:contentDescription="@string/descButtonLeft"
            android:src="@drawable/circled_left" />

        <ImageButton
            android:id="@+id/ibRight"
            style="@style/MyImageButton"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ivCenter"
            android:layout_toRightOf="@id/ivCenter"
            android:contentDescription="@string/descButtonRight"
            android:src="@drawable/circled_right" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/primary"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTime"
            style="@style/MyText"
            android:text="@string/defaultTime" />

        <Button
            android:id="@+id/bStartPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvScore"
            style="@style/MyText"
            android:text="@string/score" />

    </LinearLayout>

</LinearLayout>