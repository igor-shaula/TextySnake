<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/primary_dark"
    android:orientation="horizontal"
    android:padding="@dimen/size_16">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.igor.shaula.snake_in_text.custom_view.MyTextView
            style="@style/MyText.Scores"
            android:text="@string/yourResult" />

        <com.igor.shaula.snake_in_text.custom_view.MyTextView
            android:id="@+id/mtvCurrentScore"
            style="@style/MyText.Scores"
            android:text="@string/app_name" />

        <com.igor.shaula.snake_in_text.custom_view.MyTextView
            android:id="@+id/mtvCurrentTime"
            style="@style/MyText.Scores"
            android:text="@string/app_name" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/size_2"
        android:layout_height="match_parent"
        android:background="@color/primary_light" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.igor.shaula.snake_in_text.custom_view.MyTextView
            style="@style/MyText.Scores"
            android:text="@string/bestResult" />

        <com.igor.shaula.snake_in_text.custom_view.MyTextView
            android:id="@+id/mtvBestScore"
            style="@style/MyText.Scores"
            android:text="@string/app_name" />

        <com.igor.shaula.snake_in_text.custom_view.MyTextView
            android:id="@+id/mtvBestTime"
            style="@style/MyText.Scores"
            android:text="@string/app_name" />

    </LinearLayout>

</LinearLayout>