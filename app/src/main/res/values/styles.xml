<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="MyText">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyText.Weight_1">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MyText.Scores">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/size_16</item>
    </style>

    <style name="MyImageButton">
        <item name="android:layout_height">@dimen/directionsButtonSize</item>
        <item name="android:layout_width">@dimen/directionsButtonSize</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyRadioButton" parent="MyText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:padding">@dimen/size_16</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/size_8</item>
    </style>

</resources>