<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--styles for every text field-->

    <style name="MyText">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyText.Dialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/size_16</item>
    </style>

    <style name="MyText.Weight">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/size_16</item>
    </style>

    <style name="MyText.Weight.Land">
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/size_8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyText.Weight.Land.Active">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="MyText.Main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/oneSymbol</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="MyText.Main.Guide">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/userGuide</item>
    </style>

    <style name="MyText.Main.Field">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/oneSymbol</item>
    </style>

    <style name="MyRadioButton" parent="MyText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/size_8</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">@dimen/size_8</item>
        <item name="android:background">@drawable/my_radio_button_states</item>
    </style>

    <!--horizontal dividers-->

    <style name="MyHorizLine">
        <item name="android:layout_marginTop">@dimen/size_16</item>
        <item name="android:layout_height">@dimen/size_2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/primary_light</item>
    </style>

    <!--ViewGroups-->

    <style name="MyToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MyFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/primary_light</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MyVG_MatchMatchVert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyVG_MatchWrapHoriz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyVG_WrapWrapCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MyVG_WrapWrapCenter.WeightVertical">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>