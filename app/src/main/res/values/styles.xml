<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="MyText">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyText.Weight">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/size_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyText.Weight.Land">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="MyText.Scores">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/size_16</item>
    </style>

    <style name="MyText.Main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/userGuide</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="MyImageButton">
        <item name="android:layout_height">@dimen/directionsButtonSize</item>
        <item name="android:layout_width">@dimen/directionsButtonSize</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyRadioButton" parent="MyText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/size_8</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">@dimen/size_8</item>
        <item name="android:background">@drawable/my_radio_button_states</item>
    </style>

</resources>