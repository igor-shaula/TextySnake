<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_sync"
        android:summary="cbpSummary"
        android:title="cbpTitle" />

    <ListPreference
        android:defaultValue="lpDefaultValue"
        android:dialogTitle="lpDialogTitle"
        android:entries="@array/speedNames"
        android:entryValues="@array/speedValues"
        android:key="@string/speedKey"
        android:title="@string/setSpeed1" />

</PreferenceScreen>